{
  "ts-node": {
    "moduleTypes": {
      "jest.config.ts": "cjs"
    }
  },
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "declaration": true,
    "declarationDir": "dist",
    "removeComments": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "rootDirs": ["src","test"],
  },
  "include": [
    "./src/global.d.ts"
  ],
  "exclude": ["node_modules", "dist", "build"]
}
